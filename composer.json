{
    "name": "herrera-io/wise",
    "type": "library",
    "description": "Symfony Config for everyone else.",
    "keywords": [
        "config"
    ],
    "homepage": "http://github.com/herrera-io/php-wise",
    "license": "MIT",
    "authors": [
        {
            "name": "Kevin Herrera",
            "email": "kevin@herrera.io",
            "homepage": "http://kevin.herrera.io"
        }
    ],
    "support": {
        "issues": "https://github.com/herrera-io/php-wise/issues"
    },
    "require": {
        "php": ">=5.3.3",
        "symfony/config": "~2.2"
    },
    "require-dev": {
        "herrera-io/json": "~1.0",
        "herrera-io/phpunit-test-case": "1.*",
        "mikey179/vfsStream": "~1.6",
        "phpunit/phpunit": ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3",
        "symfony/yaml": "~2.2"
    },
    "suggest": {
        "ext-dom": "For parsing XML files.",
        "herrera-io/json": "For parsing JSON files.",
        "symfony/yaml": "For parsing YAML files."
    },
    "autoload": {
        "psr-0": {
            "Herrera\\Wise": "src/lib"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "Herrera\\Wise\\Tests": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
